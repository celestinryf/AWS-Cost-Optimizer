# ============================================================
# AWS Cost Optimizer API â€” Environment Variables
# Copy this file to .env and fill in your values.
# ============================================================

# Application identity
APP_NAME=aws-cost-optimizer-api
ENVIRONMENT=development
API_PREFIX=/api/v1

# CORS: comma-separated list of allowed origins.
# For a desktop app calling the local API, keep localhost.
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# SQLite database path.
# Use an absolute path in production or when running in Docker.
RUNS_DB_PATH=data/runs.db

# Executor permissions (comma-separated IAM-style action names).
# The executor checks this list before performing any action.
# Leave empty to block all execution.
# Omit entirely to use the built-in default set shown below.
EXECUTOR_GRANTED_PERMISSIONS=s3:GetObject,s3:PutObject,s3:GetLifecycleConfiguration,s3:PutLifecycleConfiguration,s3:ListBucketMultipartUploads,s3:AbortMultipartUpload

# WARNING: Deletions are permanent and irreversible.
# Set to "true" only after thorough review of DELETE_STALE_OBJECT recommendations.
ALLOW_DESTRUCTIVE_EXECUTION=false
